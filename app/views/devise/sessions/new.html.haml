.page_caption
  %h1.cufon Sign in
  %p.cufon
    
.inner_wrapper
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %p
      = f.label :email
      = f.text_field :email

    %p
      = f.label :password
      = f.password_field :password

    - if devise_mapping.rememberable?
      %p
        = f.check_box :remember_me
        = f.label :remember_me

    %p
      = f.submit "Sign in"

  = render :partial => "devise/shared/links"