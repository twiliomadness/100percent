        %b
          = t("activerecord.attributes.voter.last_name", :default => t("activerecord.labels.last_name", :default => "Last name"))
          \:
        = voter.last_name
      %p
        %b
          = t("activerecord.attributes.voter.city", :default => t("activerecord.labels.city", :default => "City"))
          \:
        = voter.city
      %p
        %b
          = t("activerecord.attributes.voter.status", :default => t("activerecord.labels.status", :default => "Status"))
          \:
        = voter.status
      %p
        %b
          = t("activerecord.attributes.voter.zip", :default => t("activerecord.labels.zip", :default => "Zip"))
          \:
        = voter.zip
      %p
        %b
          = t("activerecord.attributes.voter.date_of_birth", :default => t("activerecord.labels.date_of_birth", :default => "Date of birth"))
