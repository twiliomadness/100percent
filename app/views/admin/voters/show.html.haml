      %p
        %b
          = t("activerecord.attributes.voter.sms_city", :default => t("activerecord.labels.sms_city", :default => "Sms city"))
          \:
        = voter.sms_city
      %p
        %b
          = t("activerecord.attributes.voter.sms_state", :default => t("activerecord.labels.sms_state", :default => "Sms state"))
          \:
        = voter.sms_state
