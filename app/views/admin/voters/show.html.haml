.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_voters_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_voter_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_voter.phone_number", :default => t("activerecord.labels.phone_number", :default => "Phone number"))
          \:
        = voter.phone_number
      %p
        %b
          = t("activerecord.attributes.admin_voter.first_name", :default => t("activerecord.labels.first_name", :default => "First name"))
          \:
        = voter.first_name
      %p
        %b
          = t("activerecord.attributes.admin_voter.last_name", :default => t("activerecord.labels.last_name", :default => "Last name"))
          \:
        = voter.last_name
      %p
        %b
          = t("activerecord.attributes.admin_voter.city", :default => t("activerecord.labels.city", :default => "City"))
          \:
        = voter.city
      %p
        %b
          = t("activerecord.attributes.admin_voter.status", :default => t("activerecord.labels.status", :default => "Status"))
          \:
        = voter.status
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_voter_path(voter), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_voter_path(voter), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
