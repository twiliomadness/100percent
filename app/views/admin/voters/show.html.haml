        %b
          = t("activerecord.attributes.voter.sms_zip", :default => t("activerecord.labels.sms_zip", :default => "Sms zip"))
          \:
        = voter.sms_zip
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_voter_path(voter), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), voter_path(voter), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')

- voter.text_messages.each do |message|
  %p
    = message.type
    %br
    = message.text
    %br
    = message.created_at
    
= form_for :voter, :url => admin_voter_send_text_message_path(voter), :html => { :class => :form } do |f|
  = f.label "Message Text"
  = f.text_field :message_text, :size => 100, :class => 'text_field', :maxlength => 160
  = f.submit "Send Message", :class => 'button'

