.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", voters_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_voter_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", voter_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.voter.user_id", :default => t("activerecord.labels.user_id", :default => "User"))
          \:
        = voter.user_id
      %p
        %b
          = t("activerecord.attributes.voter.type", :default => t("activerecord.labels.type", :default => "Type"))
          \:
        = voter.type
      %p
        %b
          = t("activerecord.attributes.voter.phone_number", :default => t("activerecord.labels.phone_number", :default => "Phone number"))
