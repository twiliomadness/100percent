.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_users_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_user_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_user_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_user.email", :default => t("activerecord.labels.email", :default => "Email"))
          \:
        = user.email
      %p
        %b
          = t("activerecord.attributes.admin_user.encrypted_password", :default => t("activerecord.labels.encrypted_password", :default => "Encrypted password"))
          \:
        = user.encrypted_password
      %p
        %b
          = t("activerecord.attributes.admin_user.password_salt", :default => t("activerecord.labels.password_salt", :default => "Password salt"))
          \:
        = user.password_salt
      %p
        %b
          = t("activerecord.attributes.admin_user.reset_password_token", :default => t("activerecord.labels.reset_password_token", :default => "Reset password token"))
          \:
        = user.reset_password_token
      %p
        %b
          = t("activerecord.attributes.admin_user.remember_token", :default => t("activerecord.labels.remember_token", :default => "Remember token"))
          \:
        = user.remember_token
      %p
        %b
          = t("activerecord.attributes.admin_user.remember_created_at", :default => t("activerecord.labels.remember_created_at", :default => "Remember created at"))
          \:
        = user.remember_created_at
      %p
        %b
          = t("activerecord.attributes.admin_user.sign_in_count", :default => t("activerecord.labels.sign_in_count", :default => "Sign in count"))
          \:
        = user.sign_in_count
      %p
        %b
          = t("activerecord.attributes.admin_user.current_sign_in_at", :default => t("activerecord.labels.current_sign_in_at", :default => "Current sign in at"))
          \:
        = user.current_sign_in_at
      %p
        %b
          = t("activerecord.attributes.admin_user.last_sign_in_at", :default => t("activerecord.labels.last_sign_in_at", :default => "Last sign in at"))
          \:
        = user.last_sign_in_at
      %p
        %b
          = t("activerecord.attributes.admin_user.current_sign_in_ip", :default => t("activerecord.labels.current_sign_in_ip", :default => "Current sign in ip"))
          \:
        = user.current_sign_in_ip
      %p
        %b
          = t("activerecord.attributes.admin_user.last_sign_in_ip", :default => t("activerecord.labels.last_sign_in_ip", :default => "Last sign in ip"))
          \:
        = user.last_sign_in_ip
      %p
        %b
          = t("activerecord.attributes.admin_user.authentication_token", :default => t("activerecord.labels.authentication_token", :default => "Authentication token"))
          \:
        = user.authentication_token
      %p
        %b
          = t("activerecord.attributes.admin_user.first_name", :default => t("activerecord.labels.first_name", :default => "First name"))
          \:
        = user.first_name
      %p
        %b
          = t("activerecord.attributes.admin_user.last_name", :default => t("activerecord.labels.last_name", :default => "Last name"))
          \:
        = user.last_name
      %p
        %b
          = t("activerecord.attributes.admin_user.city", :default => t("activerecord.labels.city", :default => "City"))
          \:
        = user.city
      %p
        %b
          = t("activerecord.attributes.admin_user.status", :default => t("activerecord.labels.status", :default => "Status"))
          \:
        = user.status
      %p
        %b
          = t("activerecord.attributes.admin_user.phone_number", :default => t("activerecord.labels.phone_number", :default => "Phone number"))
          \:
        = user.phone_number
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_user_path(user), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_user_path(user), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
